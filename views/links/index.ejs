<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-8 text-white">Your Links</h1>

  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% links.forEach(link => { %>
          <div class="relative w-full rounded-lg overflow-hidden shadow-lg bg-gradient-to-br from-card-bg to-card-hover transition-all duration-300 ease-in-out hover:-translate-y-1 hover:shadow-2xl">
              <div class="relative p-6 flex flex-col h-full">
                  <div class="flex justify-between items-start">
                      <p class="text-xs text-gray-500"><%= link.readTime %> Â· <%= link.createdAt.toLocaleDateString() %></p>
                      <button class="text-gray-500 hover:text-yellow-400 cursor-pointer star-button" data-id="<%= link.id %>">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="star-icon">
                              <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                          </svg>
                      </button>
                  </div>
                  <h2 class="text-white text-2xl font-bold mt-4 mb-2 hover:text-gray-300 transition-colors duration-200"><%= link.title %></h2>
                  <p class="text-gray-400 text-sm mb-4 flex-grow"><%= link.description %></p>
                  <a href="<%= link.url %>" target="_blank" rel="noopener noreferrer" class="text-blue-400 hover:text-blue-300 text-sm mb-4">Visit Website</a>
                  <div class="flex items-center mt-auto">
                      <div class="relative mr-3">
                          <img src="/images/mw-sq.png" alt="Author" class="rounded-full w-10 h-10 object-cover">
                          <div class="absolute inset-0 rounded-full border-2 border-avatar-border opacity-75"></div>
                      </div>
                      <div>
                          <p class="text-white text-sm font-semibold"><%= link.author %></p>
                          <div class="flex flex-wrap gap-2 mt-1">
                              <% if (link.tags && typeof link.tags === 'string') { %>
                                  <% const tagArray = link.tags.split(',').map(tag => tag.trim()); %>
                                  <% tagArray.slice(0, 3).forEach(tag => { %>
                                      <span class="text-xs text-gray-400 bg-gray-800 rounded-full px-2 py-1 text-[10px]"><%= tag %></span>
                                  <% }) %>
                                  <% if (tagArray.length > 3) { %>
                                      <span class="text-xs text-gray-500 ml-1 text-[10px]">+<%= tagArray.length - 3 %></span>
                                  <% } %>
                              <% } else { %>
                                  <span class="text-xs text-gray-400 bg-gray-800 rounded-full px-2 py-1 text-[10px]">No tags</span>
                              <% } %>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      <% }) %>
  </div>
  <!-- New styled lower section -->
  <div class="grid gap-8 md:grid-cols-3">
    <!-- Recently Added Links -->
    <div class="bg-card-bg rounded-lg p-6">
        <h2 class="text-xl font-bold mb-4 text-white">Recently Added</h2>
        <ul class="space-y-4">
            <% links.slice(0, 5).forEach(link => { %>
                <li class="border-b border-gray-700 pb-2">
                    <a href="<%= link.url %>" class="text-blue-400 hover:text-blue-300 text-sm font-medium"><%= link.title %></a>
                    <p class="text-gray-500 text-xs mt-1"><%= link.createdAt.toLocaleDateString() %></p>
                </li>
            <% }) %>
        </ul>
    </div>

    <!-- Tag Cloud -->
    <div class="bg-card-bg rounded-lg p-6">
        <h2 class="text-xl font-bold mb-4 text-white">Popular Tags</h2>
        <div class="flex flex-wrap gap-2">
            <% 
            const allTags = links.flatMap(link => link.tags ? link.tags.split(',').map(tag => tag.trim()) : []);
            const tagCounts = allTags.reduce((acc, tag) => {
                acc[tag] = (acc[tag] || 0) + 1;
                return acc;
            }, {});
            const sortedTags = Object.entries(tagCounts).sort((a, b) => b[1] - a[1]).slice(0, 20);
            %>
            <% sortedTags.forEach(([tag, count]) => { %>
                <span class="text-xs text-gray-400 bg-gray-800 rounded-full px-3 py-1 hover:bg-gray-700 transition-colors duration-200 cursor-pointer"><%= tag %> (<%= count %>)</span>
            <% }) %>
        </div>
    </div>

    <!-- Newsletter Signup -->
    <div class="bg-card-bg rounded-lg p-6">
        <h2 class="text-xl font-bold mb-4 text-white">Newsletter</h2>
        <p class="text-gray-400 mb-4 text-sm">Stay updated with our latest links and resources.</p>
        <form class="space-y-4">
            <div class="relative">
                <input type="email" placeholder="Your email address" class="w-full px-4 py-2 rounded-lg bg-gray-800 text-white border border-gray-700 focus:outline-none focus:border-blue-500 pr-24">
                <button type="submit" class="absolute right-1 top-1 bg-blue-600 text-white px-4 py-1 rounded-lg hover:bg-blue-700 transition duration-300 text-sm">Subscribe</button>
            </div>
        </form>
    </div>
</div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
      const starButtons = document.querySelectorAll('.star-button');
      starButtons.forEach(button => {
          button.addEventListener('click', (e) => {
              e.preventDefault();
              const linkId = button.getAttribute('data-id');
              const starIcon = button.querySelector('.star-icon');
              starIcon.classList.toggle('text-yellow-400');
              // Here you can add AJAX call to update the star status in the backend
              console.log(`Toggled star for link ${linkId}`);
          });
      });
  });
</script>