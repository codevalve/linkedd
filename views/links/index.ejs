<h1 class="text-3xl font-bold mb-6">Your Links</h1>

<div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
  <% links.forEach(link => { %>
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-xl font-semibold mb-2"><%= link.title %></h2>
      <a href="<%= link.url %>" target="_blank" class="text-blue-600 hover:underline"><%= link.url %></a>
      <p class="mt-2 text-gray-600"><%= link.description %></p>
      <p class="mt-4 text-sm text-gray-500">Added on <%= link.createdAt.toLocaleDateString() %></p>
    </div>
  <% }) %>
</div>