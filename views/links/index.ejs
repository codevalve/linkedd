<div class="container mx-auto py-8">
  <h1 class="text-2xl font-bold mb-4">All Links</h1>
  <a href="/links/new" class="btn btn-primary mb-4">Add New Link</a>

  <% if (links.length > 0) { %>
    <div class="grid grid-cols-1 gap-4">
      <% links.forEach(link => { %>
        <div class="bg-white shadow-md rounded p-4" id="link-item-<%= link.id %>">
          <h2 class="text-xl font-semibold"><%= link.title %></h2>
          <p><%= link.description %></p>
          <a href="<%= link.url %>" class="text-blue-500" target="_blank"><%= link.url %></a>
          <div class="mt-4">
            <a href="/links/<%= link.id %>/edit" class="btn btn-secondary mr-2">Edit</a>
            <form action="/links/<%= link.id %>/delete" method="POST" class="inline">
              <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this link?');">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p>No links found. <a href="/links/new" class="text-blue-500">Create one now</a>.</p>
  <% } %>
</div>
