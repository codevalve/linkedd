generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Link {
  id          Int      @id @default(autoincrement())
  title       String
  url         String
  description String?
  readTime    String?
  author      String
  tags        String
  screenshot  String?
  starred     Boolean @default(false)
  createdAt   DateTime @default(now())
}